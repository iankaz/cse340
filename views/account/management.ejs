<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error %></li>
    <% }) %>
  </ul>
<% } %>

<h1><%= title %></h1>

<% if (locals.loggedin) { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You're logged in as <%= locals.accountData.account_type %></p>
<% } %>
