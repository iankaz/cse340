<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
      <% if (locals.loggedin) { %>
        <a title="View your account" href="/account/">
          Welcome <%= locals.accountData.account_firstname %>
        </a>
        <a title="Click to log out" href="/account/logout">Logout</a>
      <% } else { %>
        <a title="Click to log in" href="/account/login">My Account</a>
      <% } %>
      <label for="darkModeToggle" style="margin-left: 15px; cursor: pointer;">
        Dark Mode
        <input type="checkbox" id="darkModeToggle" style="margin-left: 5px; cursor: pointer;">
      </label>
    </div>
  </header>
  <script src="/js/dark-mode-toggle.js"></script>
  